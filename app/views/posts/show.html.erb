<p id="notice"><%= notice %></p>

<p>
  <strong> <h3><%= @post.title %></h3></strong>
</p>
  <h6><%= @post.created_at.strftime('%b %d, %Y') %></h6>
<p>
  <h5><i>Reading time: <%=  @post.body.reading_time :format => :approx %></i></h5>
</p>
 

<p>
  <i><%= @post.hashtags %></i>
</p>

<p>
  <%= @post.body.html_safe %>
</p>

<h2><%= link_to '<<', posts_path %></h2>
<% if admin_signed_in? %>
  <%= link_to "Edit", edit_post_path(@post), class: "btn btn-default" %>
  <%= link_to "Delete", post_path(@post), class: "btn btn-danger", data: {:confirm => "Are you sure?"}, method: :delete %>
<% end %>